{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "../../dist/out-tsc",
    "declaration": true,
    "types": ["node"],
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "importHelpers": true,
    "module": "commonjs"
  },
  "include": ["**/*.ts"],
  "exclude": [
    "**/tests/*",
    "**/*.spec.ts",
    "**/*.test.ts",
    "**/static/**"
  ]
}
